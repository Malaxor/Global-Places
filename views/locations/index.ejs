<% include ../partials/header %>

<div class="row">
	<div class="col-md-12">
		<div class='wrapper'>
			<h2><em>"Set your eyes on global places."</em></h2>
			<p>
				<a class="btn btn-primary btn-lg" href="/locations/new">Add a Global Place</a>
			</p>
			<p>
				<form class="form-inline" action="/" method="GET">
					<div class="form-group">
						<input type="text" name="search" class="form-control" placeholder="global places search">
						<input type="submit" value="search" class="btn btn-default">
					</div>
				</form>
			</p>
		</div>		
	</div>	
</div>
<div class="row text-center">
	<div class="col-md-12">
		<% if(noMatch) { %>
			<h3><%= noMatch %></h3>
		<% } %>
	</div>
	<% locations.forEach(({ image, name, _id }) => { %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<a href="/locations/<%= _id %>">
					<img src="<%= image %>" class='img-responsive'>
					<div class="caption">
						<h4><%= name %></h4>	
					</div>
				</a>	
			</div>
		</div>	
	<% }); %>
</div>

<% include ../partials/footer %>