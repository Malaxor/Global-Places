<% include ../partials/header %>
<div class="row">
	<h1 style="text-align: center">Add a Comment to <%= location.name %></h1>
	<div style="width: 30%; margin: 35px auto">
		<form action="/locations/<%= location._id %>/comments" method="POST">
			<div class="form-group">
				<textarea class="form-control" maxlength="500" rows='10' col='40' placeholder="add a comment" name="comment[text]" required></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/locations/<%= location.id %>">Go Back</a>	
	</div>
</div>
<% include ../partials/footer %></div>