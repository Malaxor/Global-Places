<% include ../partials/header %>

<div class="row">
	<h1 style="text-align: center">Edit Comment</h1>
	<div style="width: 30%; margin: 35px auto">
		<form action="/locations/<%= location_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<textarea class="form-control" maxlength="80" rows='10' col='40' placeholder="<%= comment.text %>" name="comment[text]" required></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/">Go Back</a>	
	</div>
</div>

<% include ../partials/footer %>